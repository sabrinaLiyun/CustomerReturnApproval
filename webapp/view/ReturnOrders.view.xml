										<!--<ObjectStatus id="ApprovalStatus" text="{ApprovalStatusDesc}"/>-->
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</items>
				</VBox>
			</f:content>
			<f:footer>
				<OverflowToolbar>
					<content>
						<ToolbarSpacer/>
					</content>
				</OverflowToolbar>
			</f:footer>
		</f:DynamicPage>
	</App>
