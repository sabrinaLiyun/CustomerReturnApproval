<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.f.semantic" xmlns:layout="sap.ui.layout" controllerName="cn.bosch.CustomerReturnApproval.controller.Worklist">
	<semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false">
		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" level="H2"/>
		</semantic:titleHeading>
		<semantic:headerContent>
			<!--<layout:HorizontalLayout allowWrapping="true">-->
			 
							<Label text="Return Order:"/>
							<Input xmlns="sap.m" value="" id="input_Order" width="15%"/>
							<Label text="Creation Date:"/>
							<DatePicker xmlns="sap.m" id="picker1" width="15%"/>
							<DatePicker xmlns="sap.m" id="picker0" width="15%"/>
							<Button xmlns="sap.m" text="Go" id="button0" type="Emphasized" press="onSearchPress"/>
			
			<!--</layout:HorizontalLayout>-->
		</semantic:headerContent>
		<semantic:content>
			<Table id="table" width="auto" items="{ path: '/CustomerREturn', sorter: { path: 'CustomerReturn', descending: false } }" noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}" growing="true" growingScrollToLoad="true" updateFinished=".onUpdateFinished">
				<headerToolbar>
					<OverflowToolbar>
						<content>
							<!--<Label text="Return Order:"/>-->
							<!--<Input xmlns="sap.m" value="" id="input_Order" width="15%"/>-->
							<!--<Label text="Creation Date:"/>-->
							<!--<DatePicker xmlns="sap.m" id="picker1"/>-->
							<!--<ToolbarSpacer/>-->
							<!--<DatePicker xmlns="sap.m" id="picker0"/>-->
							<!--<Button xmlns="sap.m" text="Go" id="button0" type="Emphasized" press="onSearchPress"/>-->
						
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column id="ReturnOrder">
						<Text text="{i18n>Customer Return Order}" id="ReturnOrderTitle"/>
					</Column>
					<Column id="SalesOrg" hAlign="End">
						<Text text="{i18n>Sales Orgnization}" id="SalesOrgTitle"/>
					</Column>
					<Column id="CustomerNumber">
						<Text text="{i18n>Distribution Channel}" id="DistributionChannelTitle"/>
					</Column>
					<Column id="CustomerName" hAlign="End">
						<Text text="{i18n>Organization Division}" id="OrgDivisionTitle"/>
					</Column>
					<Column id="CreationDate">
						<Text text="{i18n>Customer Number}" id="CreationDateTitle"/>
					</Column>
					<Column id="ReponseDate" hAlign="End">
						<Text text="{i18n>Customer Name}" id="ReponseDateTitle"/>
					</Column>
					<Column id="ApprovalSta" hAlign="End">
						<Text text="{i18n>Creation Date}" id="ApprovalStaTitle"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press=".onPress">
						<cells>
							<ObjectIdentifier title="{CustomerReturn}"/>
							<ObjectIdentifier title="{SalesOrganization}"/>
							<ObjectIdentifier title="{DistributionChannel}"/>
							<ObjectIdentifier title="{OrganizationDivision}"/>
							<ObjectIdentifier title="{SoldToParty}"/>
							<ObjectIdentifier title="{CustomerName}"/>
							<ObjectIdentifier title="{CreationDate}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
		</semantic:sendEmailAction>
	</semantic:SemanticPage>
</mvc:View>